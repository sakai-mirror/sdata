<?xml version="1.0"?>
<web-app id="SData" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>sakai-sdata</display-name>
	<description>Sakai SData</description>
	
	<!-- 
	The Sakai Request Hander 
	-->
	<filter>
		<filter-name>sakai.request</filter-name>
		<filter-class>org.sakaiproject.sdata.tool.StreamRequestFilter</filter-class>
	</filter>
	
	<!--
	Mapped onto the Search Handler
	-->
	<filter-mapping>
		<filter-name>sakai.request</filter-name>
		<servlet-name>sdata1</servlet-name>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>sakai.request</filter-name>
		<servlet-name>sdata2</servlet-name>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
	</filter-mapping>
	
	<!--
	The Search Controller 
	-->
	<servlet>
		<servlet-name>sdata1</servlet-name>
		<servlet-class>
			org.sakaiproject.sdata.tool.JCRServlet
		</servlet-class>
		<load-on-startup>100</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>sdata2</servlet-name>
		<servlet-class>
			org.sakaiproject.sdata.tool.JCRDumper
		</servlet-class>
		<load-on-startup>100</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>sdata1</servlet-name>
		<url-pattern>/f/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>sdata2</servlet-name>
		<url-pattern>/d/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
</web-app>
